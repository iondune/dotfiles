
set nocompatible

set number
set backspace=indent,eol,start
set history=1000
set showcmd
set showmode
set autoread

syntax on

filetype plugin indent on
" show existing tab with 4 spaces width
set tabstop=4
" when indenting with '>', use 4 spaces width
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab
