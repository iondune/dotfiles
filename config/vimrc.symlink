
set nocompatible

set number
set backspace=indent,eol,start
set history=1000
set showcmd
set showmode
set autoread

syntax on

set autoindent
set smartindent
set smarttab

set tabstop=4
set shiftwidth=4
set softtabstop=4

set list listchars=tab:\|\ ,trail:~

if has("autocmd")
    au BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g'\"" | endif
endif
